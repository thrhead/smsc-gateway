{
    "name": "enterprise/smsc-gateway",
    "description": "Enterprise-grade SMSC Gateway with Sigtran support",
    "type": "project",
    "require": {
        "php": "^8.2",
        "laravel/lumen-framework": "^10.0",
        "php-amqplib/php-amqplib": "^3.5",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "predis/predis": "^2.0",
        "monolog/monolog": "^3.0",
        "symfony/console": "^6.0",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.20",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
